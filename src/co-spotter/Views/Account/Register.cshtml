@model RegisterViewModel

<style>
    body {
        background-color: #fff;
    }

    .msg > ul {
        margin: 0 0 .5em 0;
        padding: 0;
        list-style-type: none;
    }

        .msg > ul > li {
            border: solid 1px;
            border-radius: 5px;
            border-color: #d2b2b2;
            color: #911;
            background-color: #fcdede;
            padding: 1em 1.75em;
            font-size: small;
            font-weight: lighter;
        }

            .msg > ul > li:not(:last-child) {
                margin-bottom: .5em;
            }

    .input-group .addon {
        width: 2em;
    }

    a {
        font-size: small;
        text-decoration: none;
        color: rgba(41, 128, 185, 0.75);
    }

        a:not(:last-child) {
            margin-right: 1em;
        }
</style>

<div class="col-lg-4 col-md-6 col-sm-8 col-lg-offset-4 col-md-offset-3 col-sm-offset-2">
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="/App" method="post" class="form form-vertical" style="margin-top: 3em">
        <div class="col" style="margin: 0 1em; width: calc(100% - 2em)">
            <h2 style="font-weight: lighter; color: rgba(0, 0, 0, 0.75); text-align: center">Welcome to Co-Spotter<br />personnel registration form.</h2>
            <div asp-validation-summary="All" class="msg"></div>
            <div style="padding: 1em; border: solid .1em rgba(0, 0, 0, 0.2); border-radius: .25em; background-color: #fff; box-shadow: 0em .125em .5em -.125em rgba(0, 0, 0, 0.25)">
                <div class="form-group" style="margin-top: 0">
                    <div class="input-group">
                        <span class="addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                        <input asp-for="FullName" autocomplete="on" placeholder="Fullname" class="input" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                        <input asp-for="Email" autocomplete="on" placeholder="Email" class="input" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group" style="position: relative;">
                        <span class="addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                        <span onclick="var pass = this.parentElement.children[2]; var eye = this.parentElement.children[1]; pass.type = pass.type == 'text' ? 'password' : 'text'; eye.style['background-color'] = pass.type == 'text' ? 'rgba(0, 0, 0, .05)' : 'unset'"
                              class="password-eye" style="position: absolute; padding: 0 .75em;height: 100%; right: 0; cursor: pointer; display: flex; border-bottom-right-radius: .25em; border-top-right-radius: .25em;"><i class="fa fa-eye" style="align-self: center" aria-hidden="true"></i></span>
                        <input asp-for="Password" autocomplete="off" type="password" placeholder="Password" class="input" />
                    </div>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>
            </div>

            <div style="display: flex; padding:1em; margin: 1em 0; border: solid .1em rgba(0, 0, 0, 0.2); border-radius: .25em; background-color: #fff; box-shadow: 0em .125em .5em -.125em rgba(0, 0, 0, 0.25)">
                <a href="http://www.cospotter.com">Home</a>
                <a href="http://cospotter.com/About">About</a>
                <a href="http://cospotter.com/Contact">Contact</a>
                <a href="http://cospotter.com/Feedback">Send Feedback</a>
            </div>
        </div>
    </form>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }

</div>