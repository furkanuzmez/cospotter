@{
    Layout = null;
}

<h1>Company Register</h1>
<hr />
{{response}}
{{error}}
<form method="post" ng-submit="registerCompany()">
    <h2>Manager's Information</h2>
    <hr />
    <label for="">Fullname</label>
    <input type="text" name="managerfullname" value="" placeholder="Fullname.." ng-model="manager.fullname" ng-required="true" />

    <br />

    <label for="">Email</label>
    <input type="text" name="manageremail" value="" placeholder="Email.." ng-model="manager.email" ng-required="true" />

    <br />

    <label for="">Password</label>
    <input type="text" name="managerpassword" value="" placeholder="Password.." ng-model="manager.password" ng-required="true" />

    <br />

    <h2>Company's Information</h2>
    <hr />

    <label for="">Name</label>
    <input type="text" name="companyname" value="" placeholder="Name.." ng-model="company.name" ng-required="true" />

    <br />

    <label for="">Email</label>
    <input type="text" name="companyemail" value="" placeholder="Email.." ng-model="company.email" ng-required="true" />

    <br />

    <label for="">Phone</label>
    <input type="text" name="companyphone" value="" placeholder="Phone.." ng-model="company.phone" ng-required="true" />

    <br />

    <label for="">Logo</label>
    <input type="file" name="comoanylogo" value="" placeholder="Upload logo.." ng-model="company.logo" ng-required="false" />

    <br />

    <label for="">Website</label>
    <input type="text" name="companywebsite" value="" placeholder="Website.." ng-model="company.website" ng-required="true" />

    <br />

    <label for="">Address</label>
    <input type="text" name="companyaddress" value="" placeholder="Adress.." ng-model="company.address" ng-required="true" />

    <br />

    <input type="submit" name="name" value="Register" />

</form>